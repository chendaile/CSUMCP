{
        "extends": "./tsconfig.json",
        "compilerOptions": {
                "outDir": "./dist-server",
                "module": "NodeNext",
                "moduleResolution": "NodeNext",
                "target": "ES2022",
                "esModuleInterop": true,
                "allowSyntheticDefaultImports": true,
                "resolveJsonModule": true,
                "noEmit": true,
                "types": ["node"]
        },
        "include": ["server"]
}
