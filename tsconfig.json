{
        "compilerOptions": {
                "target": "ES2022",
                "module": "NodeNext",
                "moduleResolution": "NodeNext",
                "outDir": "./dist-node",
                "rootDir": ".",
                "resolveJsonModule": true,
                "esModuleInterop": true,
                "allowSyntheticDefaultImports": true,
                "declaration": true,
                "sourceMap": false,
                "skipLibCheck": true,
                "types": ["node"]
        },
        "include": ["server/**/*.ts", "mcp/**/*.ts", "bin/**/*.ts"]
}
